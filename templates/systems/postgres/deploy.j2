apiVersion: apps/v1
kind: Deployment
metadata:
  name: systems-postgres
spec:
  selector:
    matchLabels:
      app: systems-postgres
  template:
    metadata:
      labels:
        app: systems-postgres
    spec:
      containers:
      - name: systems-postgres
        image: postgres:12.4
        ports:
        - name: postgres
          containerPort: 5432
        env:
        - name: PGDATA
          value: "/pgdata/data"
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: tapis-systems-secrets
              key: postgres-password
        volumeMounts:
        - name: systems-pg-data
          mountPath: "/pgdata"
      volumes:
      - name: systems-pg-data
        persistentVolumeClaim:
          claimName: {{service_param["postgres_pvc"]|default(defaults["postgres_pvc"])}}
